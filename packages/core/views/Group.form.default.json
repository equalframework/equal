{
    "name": "Group",
    "description": "Simple form for displaying Group",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "33%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "label": "Group name",
                                                "help": "Unique ID of the group.",
                                                "widget": {
                                                    "heading": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label":"Details",
                        "id": "section.details",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "display_name",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%",
                                                "widget": {
                                                    "type": "text"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label":"Permissions",
                        "id": "section.permissions",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "permissions_ids",
                                                "width": "100%",
                                                "label": "Permissions"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label":"Members",
                        "id": "section.users",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "users_ids",
                                                "width": "100%",
                                                "label": "Users",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": true,
                                                            "ACTION.CREATE": true
                                                        },
                                                        "actions_sample": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        },
                                                        "selection_sample": {
                                                            "default": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}